<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:id="@+id/register"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/relativeLayout5"
            android:layout_marginTop="73dp"
            android:gravity="center"
            android:text="SecondCup"
            android:textColor="#CD853F"
            android:textSize="30dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/reg_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/reg_userText"
                android:layout_alignBottom="@+id/reg_userText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="34dp"
                android:text="@string/reg_user"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#CD853F" />

            <EditText
                android:id="@+id/reg_userText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/reg_user" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/relativeLayout9"
            android:layout_marginTop="58dp">

            <TextView
                android:id="@+id/reg_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:text="Password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#CD853F" />

            <EditText
                android:id="@+id/reg_pwdText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/reg_password"
                android:inputType="textPassword" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="260dp"
            android:layout_marginTop="235dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:text="Password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#CD853F" />


        </RelativeLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_credit_score"
            android:text="@string/login"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="450dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView12"
            android:text="" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:text="------社交账号直接登录------" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView12"
            android:layout_marginBottom="65dp"
            android:layout_toStartOf="@+id/imageView7"
            android:background="@drawable/weibo" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginEnd="15dp"
            android:background="@drawable/twitter" />

        <ImageView
            android:layout_marginBottom="70dp"
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView8"
            android:layout_toEndOf="@+id/textView5"
            android:background="@drawable/weixin" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView12"
            android:layout_alignTop="@+id/imageView5"
            android:layout_marginStart="18dp"
            android:background="@drawable/qq" />

        <TextView

            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:text="已有账号  |    随便看看" />

        <EditText
            android:id="@+id/reg_pwdagText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/relativeLayout3"
            android:layout_alignBottom="@+id/relativeLayout3"
            android:layout_alignStart="@+id/imageView7"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:inputType="textPassword" />


    </RelativeLayout>

</LinearLayout>